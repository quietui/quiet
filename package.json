{
  "name": "@quietui/components",
  "type": "module",
  "version": "1.0.0",
  "description": "A hand-crafted UI library for the Web with a focus on accessibility, longevity, performance, and simplicity.",
  "types": "dist/quiet.d.ts",
  "exports": {
    ".": {
      "types": "./dist/quiet.d.ts",
      "import": "./dist/quiet.js"
    },
    "./quiet.js": "./dist/quiet.js",
    "./quiet.loader.js": "./dist/quiet.loader.js",
    "./components/*": "./dist/components/*",
    "./custom-elements.json": "./dist/custom-elements.json"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "components",
    "custom elements",
    "design systems",
    "ui",
    "web components"
  ],
  "author": "Cory LaViska",
  "license": "MIT",
  "homepage": "https://github.com/quietui/components#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quietui/components.git"
  },
  "bugs": {
    "url": "https://github.com/quietui/components/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/quietui"
  },
  "scripts": {
    "start": "node scripts/build.js --develop --browser",
    "build": "node scripts/build.js",
    "build:browser": "node scripts/build.js --browser",
    "build:vercel": "npm run build:browser && cp -r dist _site/dist",
    "test": "wtr --group default",
    "test:component": "wtr -- --watch --group",
    "test:watch": "wtr --watch --group default",
    "release": "node scripts/release.js",
    "release:dry-run": "node scripts/release.js --dry-run",
    "prepublishOnly": "node scripts/no-direct-publish.js",
    "create": "plop --plopfile src/plop/plopfile.js",
    "prepare": "npx playwright install",
    "prettier": "prettier --check --log-level=warn .",
    "prettier:fix": "prettier --write --log-level=warn .",
    "spellcheck": "cspell \"**/*.{js,ts,json,html,css,md}\" --no-progress",
    "check-updates": "npx npm-check-updates --interactive --format group"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^4.1.0",
    "@floating-ui/dom": "^1.7.0",
    "@quietui/scurry": "^5.0.1",
    "@quietui/squeak": "^1.1.0",
    "lit": "^3.3.0",
    "nanoid": "^5.1.5",
    "qr-creator": "^1.0.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@tabler/icons": "^3.33.0",
    "@types/mocha": "^10.0.10",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.20.1",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.0",
    "browser-sync": "^3.0.4",
    "chalk": "^5.4.1",
    "comment-parser": "^1.4.1",
    "cspell": "^9.0.1",
    "custom-element-vs-code-integration": "^1.5.0",
    "esbuild": "^0.25.4",
    "get-port": "^7.1.0",
    "globby": "^14.1.0",
    "lunr": "^2.3.9",
    "markdown-it": "^14.1.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-container": "^4.0.0",
    "markdown-it-ins": "^4.0.0",
    "markdown-it-kbd": "^3.0.0",
    "markdown-it-mark": "^4.0.0",
    "node-html-parser": "^7.0.1",
    "npm-check-updates": "^18.0.1",
    "ora": "^8.2.0",
    "plop": "^4.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prismjs": "^1.30.0",
    "recursive-copy": "^2.0.14",
    "slugify": "^1.6.6",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  }
}
