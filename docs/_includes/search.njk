<quiet-dialog id="site-search" light-dismiss>
  <div id="site-search-container">
    {# Header #}
    <header>
      <quiet-text-field
        id="site-search-text-field"
        type="search"
        appearance="unstyled"
        size="xl"
        clearable
        placeholder="Search"
        autofocus
        autocomplete="off"
        autocorrect="off"
        autocapitalize="off"
        enterkeyhint="go"
        spellcheck="false"
        maxlength="100"
        role="combobox"
        aria-autocomplete="list"
        aria-expanded="true"
        aria-controls="site-search-listbox"
        aria-haspopup="listbox"
        aria-activedescendant
      >
        <quiet-icon slot="start" name="search"></quiet-icon>
      </quiet-text-field>
    </header>

    {# Body #}
    <div id="site-search-body">
      <ul
        id="site-search-listbox"
        role="listbox"
        aria-label="Search results"
      ></ul>
      <quiet-empty-state id="site-search-empty">
        <quiet-icon slot="illustration" name="cheese"></quiet-icon>
        No results found
      </quiet-empty-state>
    </div>

    {# Footer #}
    <footer>
      <small>
        <quiet-hotkey label="Up" keys="$up"></quiet-hotkey>
        <quiet-hotkey label="Down" keys="$down"></quiet-hotkey>
        Navigate
      </small>

      <small>
        <quiet-hotkey label="Enter" keys="$enter"></quiet-hotkey>
        Select
      </small>

      <small>
        <quiet-hotkey label="Escape" keys="$escape"></quiet-hotkey>
        Close
      </small>
    </footer>
  </div>
</quiet-dialog>
